<div class="app-content">
    <div class="container-fluid px-5">
        <form id="form" class="form-floating" action="/memes/add" method="post">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="title" name="title" placeholder="Title">
                <label for="title">Title</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" placeholder="Author" name="author" id="author">
                <label for="author">Author</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" placeholder="Image URL" id="imageUrl" name="imageUrl">
                <label for="imageUrl">Image URL</label>
            </div>
            <div class="form-floating form-floating mb-3">
                <select class="form-select" id="category" name="CategoryId" for="CategoryId">
                    <% categories.forEach(el => { %>
                    <option value="<%= el.id %>"><%= `${ el.name } - ${ el.description }` %></option>
                    <% }) %>
                </select>
                <label for="category">Category</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>